<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>me.test</groupId>
    <artifactId>PageVsRowBounds</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>PrepareDB</artifactId>
  <dependencies>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>8.0.16</version>
    </dependency>
    <dependency>
      <groupId>postgresql</groupId>
      <artifactId>postgresql</artifactId>
      <version>9.1-901.jdbc4</version>
    </dependency>
  </dependencies>

  <profiles>

    <profile>
      <id>prepareMySql</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
              <execution>
                <id>prepareMysql</id>
                <phase>test</phase>
                <goals>
                  <goal>java</goal>
                </goals>
                <inherited>false</inherited>
              </execution>
            </executions>
            <configuration>
              <mainClass>me.test.PrepareDB</mainClass>
              <arguments>
                <argument>MySql</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>preparePostgreSql</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
              <execution>
                <id>prepareMysql</id>
                <phase>test</phase>
                <goals>
                  <goal>java</goal>
                </goals>
                <inherited>false</inherited>
              </execution>
            </executions>
            <configuration>
              <mainClass>me.test.PrepareDB</mainClass>
              <arguments>
                <argument>PostgreSql</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>


    <profile>
      <id>testMySql</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
              <execution>
                <id>testMysql</id>
                <phase>test</phase>
                <goals>
                  <goal>java</goal>
                </goals>
                <inherited>false</inherited>
              </execution>
            </executions>
            <configuration>
              <mainClass>me.test.TestJdbcQuery</mainClass>
              <arguments>
                <argument>MySql</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>


    <profile>
      <id>testPostgreSql</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
              <execution>
                <id>testPostgreSql</id>
                <phase>test</phase>
                <goals>
                  <goal>java</goal>
                </goals>
                <inherited>false</inherited>
              </execution>
            </executions>
            <configuration>
              <mainClass>me.test.TestJdbcQuery</mainClass>
              <arguments>
                <argument>PostgreSql</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>


  </profiles>
</project>